{
  "name": "@davidwells/eslint-config",
  "version": "0.0.2",
  "description": "An ESLint shareable config",
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "scripts": {
    "test": "eslint . && ./check-peer.js && yaspeller *.md",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "postinstall": "node ./postinstall.js"
  },
  "license": "MIT",
  "repository": "davidwells/components",
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "globals": "^13.5.0"
  },
  "peerDependencies": {
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.16.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^27.0.0"
  },
  "devDependencies": {
    "@logux/sharec-config": "^0.8.5",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "clean-publish": "^1.1.8",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.16.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^27.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "typescript": "^4.1.3",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "package.json": "./check-peer.js"
  },
  "eslintConfig": {
    "extends": "./ts"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Logux ESLint",
      "ESLint",
      "Logux",
      "Versioning",
      "ES2015",
      "js",
      "configs",
      "ES6",
      "JSX"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.5"
  }
}
